<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DateApi.UiDesign1">

    <LinearLayout
        android:id="@+id/nonmap"
        android:paddingLeft="20dp"
        android:layout_width="220dp"
        android:layout_height="300dp"
        android:background="@drawable/plant3"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <TextView
            android:id="@+id/gradienttextfield"
            android:layout_marginTop="20dp"
            android:background="@drawable/recycler_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NON MAP"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/descp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"
            android:textSize="17dp"
            android:textColor="#A31308"
            android:textStyle="bold"
            android:text="Scarabeao 8021W In out 40 Drop In/ Counter Washbasin in White"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#A31308"
            android:text="SKU:  67798/7877"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:text="REDUCE PRICE"
            android:textColor="#A31308"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:text="$228.3"
            android:textColor="#A31308"/>

    </LinearLayout>

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/imageFilterView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nonmap"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/castel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nonmap"
        app:layout_constraintTop_toBottomOf="@+id/imageFilterView" />



</androidx.constraintlayout.widget.ConstraintLayout>