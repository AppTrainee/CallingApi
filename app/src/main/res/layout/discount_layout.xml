<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/recycler_background"
    android:layout_marginBottom="6dp"
    android:layout_margin="5dp">
    <TextView
        android:id="@+id/productid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="product id"
        />
    <TextView
        android:id="@+id/productMpn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="product_mpn"
        />
    <TextView
        android:id="@+id/brandId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="brand id"
        />
    <TextView
        android:id="@+id/productName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="product name"
        />
    <TextView
        android:id="@+id/gcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="gcode"
        />

    <TextView
        android:id="@+id/msrp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="msrp"
        />
    <TextView
        android:id="@+id/brandName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="brand name"
        />
    <TextView
        android:id="@+id/brandKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="brandKey"
        />
    <TextView
        android:id="@+id/main_Image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="main_image"
        />
    <TextView
        android:id="@+id/vendor_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:text="vendor_url"
        />
    <TextView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="20dp"
        android:textColor="@color/purple_500"
        android:text="click to view product image"
        />
<!--    <ImageView-->
<!--        android:id="@+id/product_image"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="150dp"/>-->
</androidx.appcompat.widget.LinearLayoutCompat>